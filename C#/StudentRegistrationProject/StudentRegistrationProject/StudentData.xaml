<Window x:Class="StudentRegistrationProject.StudentData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentRegistrationProject"
        mc:Ignorable="d"
        Title="StudentData" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGridStudents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,82,0,69"/>
        <Label Content="Student Data" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="btnRefreshData" Content="Refresh Data" HorizontalAlignment="Left" Margin="297,380,0,0" VerticalAlignment="Top" Height="33" Width="183" FontSize="18" Click="btnRefreshData_Click"/>

    </Grid>
</Window>
