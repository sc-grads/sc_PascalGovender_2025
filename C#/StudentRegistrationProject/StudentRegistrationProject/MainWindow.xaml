<Window x:Class="StudentRegistrationProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentRegistrationProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="400 " Width="800">
    <Grid >
        <Label Content="StudentID" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="0.518,1.026"/>
        <Label Content="Surname" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="City" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Cell Phone" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button HorizontalAlignment="Left" Margin="312,309,0,0" VerticalAlignment="Top" Height="48" Width="152" Click="Button_Click" Content="Register" FontSize="24"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Margin="238,14,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="299" Height="34" RenderTransformOrigin="0.494,0.461" FontSize="24"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="238,61,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="299" Height="34" RenderTransformOrigin="0.494,0.461" FontSize="24"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Margin="238,249,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="299" Height="34" RenderTransformOrigin="0.494,0.461" FontSize="24"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="238,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="299" Height="34" RenderTransformOrigin="0.494,0.461" FontSize="24"/>
        <TextBox x:Name="txtCity" HorizontalAlignment="Left" Margin="238,154,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="299" Height="34" RenderTransformOrigin="0.494,0.461" FontSize="24"/>
        <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Margin="238,108,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="299" Height="34" RenderTransformOrigin="0.494,0.461" FontSize="24"/>
        <Button x:Name="btnDelete" HorizontalAlignment="Left" Margin="584,239,0,0" VerticalAlignment="Top" Height="48" Width="152" Content="Delete" FontSize="24" Click="btnDelete_Click"/>
        <Button x:Name="btnUpdate" HorizontalAlignment="Left" Margin="584,309,0,0" VerticalAlignment="Top" Height="48" Width="152" Content="Update" FontSize="24" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete_Copy" HorizontalAlignment="Left" Margin="584,171,0,0" VerticalAlignment="Top" Height="48" Width="152" Content="Read Data" FontSize="24" Click="btnReadData_Click" />

    </Grid>
</Window>
